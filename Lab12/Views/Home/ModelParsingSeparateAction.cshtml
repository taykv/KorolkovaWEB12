@{
    Layout = null;
}
<!doctype html>
<html>
<head>
    <title>Manual With Separate Handlers</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width">
    <link type="text/css" href="~/Style/Style.css" rel="stylesheet">
    <style type="text/css">
        a {
            text-decoration: none;
            color: grey;
        }
    </style>
</head>
<body>
    <header>
        <b>Backend1</b> <a href="~/Home/Index">Home</a>
    </header>
    <main>
        <h2>ManualWithSeparateHandlers</h2>
        <form method="post" action="~/Home/ModParSepAction">
            <input type="number" name="First" />
            <br />
            <select name="Operation">
                <option>+</option>
                <option>-</option>
                <option>*</option>
                <option>/</option>
            </select>
            <br />
            <input type="number" name="Second" />
            <br />
            <input type="submit" value="Submit" />
        </form>
    </main>
    <hr>
    <footer>© @DateTime.Now.Year - Backend1</footer>
</body>
</html>